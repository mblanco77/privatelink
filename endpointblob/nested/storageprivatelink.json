{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "storageAcctName": {
            "type": "string",
            "metadata": {
                "description": "storage account name"
            }
        },
        "privateEndpointName": {
            "type": "string",
            "metadata": {
                "description": "storage privatelink endpoint name"
            }
        },
        "vnetName": {
            "type": "string",
            "metadata": {
                "description": "vnet name where the privatelink will be deployed "
            }
        },
        "subnet": {
            "type": "string",
            "metadata": {
                "description": "subnet name where the privatelink will be deployed "
            }
        }

    },
    "variables": {
    },
    "resources": [
        {
            "name": "[parameters('storageAcctName')]",
            "type": "Microsoft.Storage/storageAccounts",
            "apiVersion": "2019-06-01",
            "location": "[resourceGroup().location]",
            "properties": {
                "accessTier": "Hot",
                "supportsHttpsTrafficOnly": true,
                "largeFileSharesState": "Disabled",
                "networkAcls": {
                    "bypass": "AzureServices",
                    "virtualNetworkRules": [
                    ],
                    "ipRules": [
                    ],
                    "defaultAction": "Deny"
                }
            },
            "dependsOn": [
            ],
            "sku": {
                "name": "Standard_LRS"
            },
            "kind": "StorageV2",
            "tags": {
                "displayName": "[parameters('storageAcctName')]"
            }
        },
        {
            "location": "[resourceGroup().location]",
            "name": "[parameters('privateEndpointName')]",
            "type": "Microsoft.Network/privateEndpoints",
            "apiVersion": "2019-09-01",
            "properties": {
                "subnet": {
                    "id": "[resourceId('Microsoft.Network/virtualNetworks/subnets', parameters('vnetName'), parameters('subnet'))]"
                },
                "privateLinkServiceConnections": [
                    {
                        "name": "[parameters('privateEndpointName')]",
                        "properties": {
                            "privateLinkServiceId": "[resourceId('Microsoft.Storage/storageAccounts', parameters('storageAcctName'))]",
                            "groupIds": [
                                "blob"
                            ]
                        }
                    }
                ]
            },
            "dependsOn": [
                "[resourceId('Microsoft.Storage/storageAccounts', parameters('storageAcctName'))]"
            ]
        },
        {
            "apiVersion": "2017-05-10",
            "name": "linkedTemplateGetPvtLinkNic",
            "type": "Microsoft.Resources/deployments",
            "properties": {
                "mode": "Incremental",
                "template": {
                    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
                    "contentVersion": "1.0.0.0",
                    "resources": [
                    ],
                    "outputs": {
                        "privatelinknicid": {
                            "type": "string",
                            "value": "[reference(resourceId('Microsoft.Network/privateEndpoints', parameters('privateEndpointName')),'2019-09-01').networkInterfaces[0].id]"
                        }

                    }
                }
            },
            "dependsOn": [
                "[resourceId('Microsoft.Network/privateEndpoints', parameters('privateEndpointName'))]"
            ]
        },
        {
            "apiVersion": "2017-05-10",
            "name": "linkedTemplateGetIpAddressPvtlink",
            "type": "Microsoft.Resources/deployments",
            "properties": {
                "expressionEvaluationOptions": {
                    "scope": "inner"
                },
                "mode": "Incremental",
                "template": {
                    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
                    "contentVersion": "1.0.0.0",
                    "parameters": {
                        "nicId": {
                            "type": "string"
                        }
                    },
                    "resources": [
                    ],
                    "outputs": {
                        "ipnic": {
                            "type": "Object",
                            "value": "[reference(resourceId('Microsoft.Network/networkInterfaces',parameters('nicId')),'2019-04-01')]"
                        }
                    }
                },
                "parameters": {
                    "nicId": {
                        "value": "[last(split(string(reference('linkedTemplateGetPvtLinkNic').outputs.privatelinknicid.value),'/'))]"
                    }
                }
            },
            "dependsOn": [
                "linkedTemplateGetPvtLinkNic"
            ]
        }

    ],
    "outputs": {
        "privatelinkprivateIPAddress": {
            "type": "string",
            "value": "[reference('linkedTemplateGetIpAddressPvtlink').outputs.ipnic.value.ipConfigurations[0].properties.privateIPAddress]"
        },
        "storageconnstring": {
            "type": "string",
            "value": "[concat('DefaultEndpointsProtocol=https;AccountName=', parameters('storageAcctName'), ';AccountKey=', listKeys(resourceId('Microsoft.Storage/storageAccounts', parameters('storageAcctName')),'2019-06-01').keys[0].value)]"
        }
    }
}
